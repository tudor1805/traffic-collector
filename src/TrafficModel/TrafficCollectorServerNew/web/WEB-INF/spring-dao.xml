<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="ro.pub.acs.traffic.collector.dao" />

    <bean id="genericDao" class="ro.pub.acs.traffic.collector.dao.GenericDAO" abstract="true">
        <property name="hibernateTemplate" ref="hibernateTemplate"/>
    </bean>

    <bean id="historyDAO" class="ro.pub.acs.traffic.collector.dao.HistoryDAO" parent="genericDao">
        <property name="persistentClass" value="ro.pub.acs.traffic.collector.domain.History" />
    </bean>

    <bean id="locationDAO" class="ro.pub.acs.traffic.collector.dao.LocationDAO" parent="genericDao">
        <property name="persistentClass" value="ro.pub.acs.traffic.collector.domain.Location" />
    </bean>

    <bean id="statsDAO" class="ro.pub.acs.traffic.collector.dao.Stats" parent="genericDao">
        <property name="persistentClass" value="ro.pub.acs.traffic.collector.domain.Stats" />
    </bean>

    <bean id="usersDAO" class="ro.pub.acs.traffic.collector.dao.Users" parent="genericDao">
        <property name="persistentClass" value="ro.pub.acs.traffic.collector.domain.Users" />
    </bean>
</beans>
