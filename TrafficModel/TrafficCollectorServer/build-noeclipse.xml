<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<!--
    Build with the following commands:
        Build:
            ant -buildfile build-ant.xml
        Make jar file:
            ant dist -buildfile build-ant.xml
        Run application:
            ant run -buildfile build-ant.xml
        Clean:
            ant clean -buildfile build-ant.xml
-->

<project basedir="." default="build" name="TrafficCollectorServer">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <property name="build" location="bin"/>
    <property name="dist" location="dist"/>
    <property name="logs" location="~/traffic-collector-logs"/>
    <path id="TrafficCollectorServer.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/commons-codec-1.6.jar"/>
        <pathelement location="lib/mysql-connector-java-5.1.7-bin.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.uad"/>
                <exclude name="**/*.ucd"/>
                <exclude name="**/*.uld"/>
                <exclude name="**/*.upd"/>
                <exclude name="**/*.cop"/>
                <exclude name="**/*.udd"/>
                <exclude name="**/*.uod"/>
                <exclude name="**/*.usd"/>
                <exclude name="**/*.utd"/>
                <exclude name="**/*.uud"/>
                <exclude name="**/*.ame"/>
                <exclude name="**/*.odd"/>
                <exclude name="**/*.ead"/>
                <exclude name="**/*.ecd"/>
                <exclude name="**/*.eld"/>
                <exclude name="**/*.epd"/>
                <exclude name="**/*.edd"/>
                <exclude name="**/*.eod"/>
                <exclude name="**/*.esd"/>
                <exclude name="**/*.etd"/>
                <exclude name="**/*.eud"/>
                <exclude name="**/*.eame"/>
                <exclude name="**/*.urd*.uml"/>
                <exclude name="**/*.ecore"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
        <delete dir="dist"/>
    </target>
    <target depends="init" name="build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}" includeantruntime="false">
            <src path="src"/>
            <classpath refid="TrafficCollectorServer.classpath"/>
        </javac>
    </target>
    <target depends="build" name="dist">
        <!-- Create the distribution directory -->
        <mkdir dir="${dist}"/>

        <!-- Create the jar file -->
        <jar jarfile="${dist}/TrafficCollectorServer.jar" basedir="${build}" update="true">
            <exclude name="old/**"/>
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Main-Class" value="ro.pub.acs.traffic.collector.TrafficCollectorServer"/>
                <attribute name="Class-Path" value="mysql-connector-java-5.1.7-bin.jar"/>
            </manifest>
       </jar>
    </target>
    <target depends="dist" name="run">
        <mkdir dir="${logs}"/>
        <echo message="Running the Server..."/>
        <exec executable="/bin/sh">
            <arg value="-c"/>
            <arg value="sudo nohup java -jar ${dist}/TrafficCollectorServer.jar 1>${logs}/traffic-collector.log 2>${logs}/traffic-collector-errs.log &amp;"/>
        </exec>
    </target>
</project>

